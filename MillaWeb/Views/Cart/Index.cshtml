@model List<MillaWeb.Models.CartItem>
@{
    ViewData["Title"] = "Cart";
    decimal total = Model.Sum(x => x.UnitPrice * x.Quantity);
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Cart</h2>
    <a class="btn btn-outline-dark" asp-controller="Catalog" asp-action="Index">Continue Shopping</a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Sepet boş.</div>
}
else
{
    <div class="card p-3 mb-3">
        <div class="d-flex justify-content-between">
            <div class="fw-semibold">Total</div>
            <div class="fw-bold">@total.ToString("N2") ₺</div>
        </div>
        <form method="post" asp-action="Clear" class="mt-3">
            <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Clear cart?');">Clear Cart</button>
        </form>
    </div>

    <table class="table table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Item</th>
                <th style="width:140px;">Price</th>
                <th style="width:180px;">Qty</th>
                <th style="width:140px;">Line</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex gap-3 align-items-center">
                            <img src="@(string.IsNullOrWhiteSpace(x.ImageUrl) ? "https://picsum.photos/seed/noimage/100/100" : x.ImageUrl)"
                                 style="width:70px;height:70px;object-fit:cover;border-radius:8px;" />
                            <div>
                                <div class="fw-semibold">@x.ProductName</div>
                                <div class="small text-muted">@x.Color / @x.Size</div>
                                <div class="small text-muted">VariantID: @x.VariantID</div>
                            </div>
                        </div>
                    </td>
                    <td>@x.UnitPrice.ToString("N2") ₺</td>
                    <td>
                        <form method="post" asp-action="UpdateQty" class="d-flex gap-2">
                            <input type="hidden" name="variantId" value="@x.VariantID" />
                            <input class="form-control form-control-sm" type="number" min="0" name="qty" value="@x.Quantity" />
                            <button class="btn btn-sm btn-dark">Update</button>
                        </form>
                        <div class="small text-muted mt-1">0 yaparsan silinir</div>
                    </td>
                    <td class="fw-bold">@((x.UnitPrice * x.Quantity).ToString("N2")) ₺</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end d-flex justify-content-end gap-2">
        <form method="post" asp-action="Clear">
            <button class="btn btn-outline-danger" onclick="return confirm('Clear cart?');">Clear</button>
        </form>

        <a class="btn btn-dark"
           asp-controller="Orders"
           asp-action="Checkout">
            Checkout
        </a>

    </div>

}
