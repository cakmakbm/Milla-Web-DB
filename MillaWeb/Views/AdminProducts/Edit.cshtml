@model MillaWeb.Models.AdminProductEditVM
@using MillaWeb.Models
@{
    ViewData["Title"] = "Edit Product";
    var categories = ViewBag.Categories as List<LookupItem> ?? new();
    var brands = ViewBag.Brands as List<LookupItem> ?? new();
    var suppliers = ViewBag.Suppliers as List<LookupItem> ?? new();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Edit Product</h2>
    <a class="btn btn-outline-dark" asp-action="Index">Back</a>
</div>

<form method="post" class="card p-3">
    <input type="hidden" asp-for="ProductID" />

    <div class="row g-2">
        <div class="col-md-4">
            <label class="form-label">Category</label>
            <select class="form-select" asp-for="CategoryID" required>
                @foreach (var c in categories)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">Brand</label>
            <select class="form-select" asp-for="BrandID" required>
                @foreach (var b in brands)
                {
                    <option value="@b.Id">@b.Name</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">Supplier</label>
            <select class="form-select" asp-for="SupplierID" required>
                @foreach (var s in suppliers)
                {
                    <option value="@s.Id">@s.Name</option>
                }
            </select>
        </div>

        <div class="col-md-8">
            <label class="form-label">Product Name</label>
            <input class="form-control" asp-for="ProductName" required />
        </div>

        <div class="col-md-4">
            <label class="form-label">Unit Price</label>
            <input class="form-control" asp-for="UnitPrice" required />
        </div>

        <div class="col-12">
            <label class="form-label">ImageUrl</label>
            <input class="form-control" asp-for="ImageUrl" />
        </div>

        <div class="col-12">
            <label class="form-label">Description</label>
            <input class="form-control" asp-for="Description" />
        </div>

        <div class="col-12 mt-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                <label class="form-check-label" for="IsActive">Active</label>
            </div>
        </div>
    </div>

    <div class="text-end mt-3">
        <button class="btn btn-dark" type="submit">Save</button>
    </div>
</form>
