@model List<MillaWeb.Models.OrderListRow>
@{
    ViewData["Title"] = "Orders";
}
<h2>Orders</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Henüz sipariş yok.</div>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>OrderID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.OrderID</td>
                    <td>@o.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@o.OrderStatus</td>
                    <td class="fw-bold">@o.TotalAmount.ToString("N2") ₺</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-dark" asp-action="Detail" asp-route-id="@o.OrderID">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
