@model MillaWeb.Models.AddressFormVM
@{
    ViewData["Title"] = "Edit Address";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Edit Address</h2>
    <a class="btn btn-outline-dark" asp-action="Index">Back</a>
</div>

<form method="post" class="card p-3">
    <input type="hidden" name="AddressID" value="@Model.AddressID" />

    <div class="mb-2">
        <label class="form-label">Address Line</label>
        <input class="form-control" name="AddressLine" value="@Model.AddressLine" required />
    </div>

    <div class="row g-2">
        <div class="col-md-4">
            <label class="form-label">City</label>
            <input class="form-control" name="City" value="@Model.City" required />
        </div>
        <div class="col-md-4">
            <label class="form-label">District</label>
            <input class="form-control" name="District" value="@Model.District" />
        </div>
        <div class="col-md-4">
            <label class="form-label">ZipCode</label>
            <input class="form-control" name="ZipCode" value="@Model.ZipCode" />
        </div>
    </div>

    <div class="row g-2 mt-2">
        <div class="col-md-6">
            <label class="form-label">Country</label>
            <input class="form-control" name="Country" value="@Model.Country" />
        </div>

        <div class="col-md-6 d-flex align-items-end">

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IsDefault" value="true"
                       @(Model.IsDefault ? "checked" : "") />
                <label class="form-check-label">Set as default</label>
            </div>

            <input type="hidden" name="IsDefault" value="false" />

        </div>
    </div>

    <div class="mt-3 text-end">
        <button class="btn btn-dark">Save</button>
    </div>
</form>
